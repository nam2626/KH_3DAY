<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kh.mapper.CarMapper">
	<select id="selectAllCar" resultType="com.kh.dto.CarDTO">
		select * from car
	</select>
	<delete id="deleteCar">
		delete from car where id like #{id}
	</delete>
	<select id="selectCarForId" resultType="car">
		select * from car where id like #{id}
	</select>
	<update id="updateCar">
		update car set 
			cname = #{cname}, myear = #{myear}, price = #{price}, mno = #{mno}
		where id like #{id}		
	</update>
	<insert id="insertCar">
		insert into car(id,cname,myear,price,mno)
		values(#{id},#{cname},#{myear},#{price},#{mno})		
	</insert>
	<select id="searchCar" resultType="car">
		select * from car
		where 
		${kind}
		<choose>
			<when test="kind.equals('id') or kind.equals('cname')">
				like '%' || #{search} || '%'
			</when>
			<otherwise>
				= #{search}
			</otherwise>
		</choose>
	</select>
</mapper>








